# Basis-Image: kleiner Python-Image
FROM python:3-slim

# Umgebungsvariablen f체r saubere Logs und keine .pyc-Files
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1

# Setze das Arbeitsverzeichnis im Container
WORKDIR /app

# Kopiere nur das requirements-File zuerst (f체r Layer Caching)
COPY requirements.txt .

# Installiere Abh채ngigkeiten
RUN pip install --no-cache-dir -r requirements.txt

# Kopiere den Rest des Codes
COPY . .

# Erstelle einen nicht-root User und gib ihm Zugriff auf das App-Verzeichnis
RUN adduser --disabled-password --gecos "" --uid 5678 appuser \
    && chown -R appuser /app
USER appuser

# Standardbefehl zum Ausf체hren des Moduls
CMD ["python", "gpt-filter-sentiment.py"]